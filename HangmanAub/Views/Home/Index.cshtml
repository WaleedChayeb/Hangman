@model HangmanAub.Result
@{ 
            var percentage = (Model.life * 100) / 7;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Let's Play - CMPS 253 HangMan Game</title> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>

    <div class="container body-content" > 
      

        <div class="row" style="margin-top:50px; margin-bottom:100px;">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1>HangMan Game</h1>
                <hr />

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" style="width:30%;">Number of Characters</th>
                            @for (int i = 1; i <= Model.length; i++)
                            {
                                <th scope="col"></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@Model.length</th>
                            @for (int i = 0; i < Model.length; i++)
                            {
                                if (Model.guessedchar.Where(a => a.index.Equals(i)).SingleOrDefault() != null)
                                {
                                    <td style="color:green;">@Model.guessedchar.Where(a => a.index.Equals(i)).SingleOrDefault().character</td>

                                }
                                else
                                {
                                    <td></td>
                                }
                            }
                        </tr>

                    </tbody>
                </table>

                @if (Model.guessedchar.Count == Model.length)
                {
                    <h4 style="color:green;">You Win! </h4>
                    <a href="@Url.Action("Index" , "Home" )">Start Again</a>
                }
                else if (Model.life == 0)
                {
                    <h4 style="color:red;">You Lose! </h4>
                    <a href="@Url.Action("Index" , "Home" )">Start Again</a>
                }
                else
                {
                    <form action="@Url.Action("Index")" method="post">


                        <div class="form-group">
                            <label>Guessed Character: </label>
                            <select class="form-control" id="char" name="c">
                                <option>A</option>
                                <option>B</option>
                                <option>C</option>
                                <option>D</option>
                                <option>E</option>
                                <option>F</option>
                                <option>G</option>
                                <option>H</option>
                                <option>I</option>
                                <option>J</option>
                                <option>K</option>
                                <option>L</option>
                                <option>M</option>
                                <option>N</option>
                                <option>O</option>
                                <option>P</option>
                                <option>Q</option>
                                <option>R</option>
                                <option>S</option>
                                <option>T</option>
                                <option>U</option>
                                <option>V</option>
                                <option>X</option>
                                <option>W</option>
                                <option>Y</option>
                                <option>Z</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn" type="submit">Submit</button>
                        </div>
                    </form>
                }
                <hr />
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="@percentage"
                         aria-valuemin="0" aria-valuemax="100" style="width:@percentage%">
                        <span>@percentage % Life</span>
                    </div>
                </div>

            </div>



            <div class="col-md-2"></div>
        </div> 
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CMPS 253 American University of Beirut</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
